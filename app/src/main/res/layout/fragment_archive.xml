<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="me.sadraa.detoxiom.features.archive_quotes.ArchiveFragment">

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/archive_rv"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        />

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/empty_status"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_fileName="empty_status.json"
        />

    <TextView
        android:id="@+id/empty_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="هنوز هیچ گفتاری ندارید!"
        android:layout_below="@+id/empty_status"
        android:layout_centerInParent="true"

        />


</RelativeLayout>
